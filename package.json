{
  "contributors": [
    {
      "name": "Mehul Baid",
      "email": "mehulbaid@outlook.com"
    }
  ],
  "name": "@mehulbaid/nest-sendgrid",
  "version": "3.0.3",
  "description": "Integrates @sendgrid/mail client in a modular way to help send email from NestJs",
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf dist",
    "format": "prettier --write \"lib/**/*.ts\"",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version": "npm version major",
    "publish": "npm publish --access public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mehulbaid/nest-sendgrid.git"
  },
  "keywords": [
    "SendGrid",
    "NestJs",
    "Node",
    "Mail"
  ],
  "author": "Mehul Baid",
  "license": "MIT",
  "dependencies": {
    "@sendgrid/mail": "^7.0.1",
    "deepmerge": "^4.2.2"
  },
  "public": true,
  "devDependencies": {
    "@nestjs/common": "^8.2.0",
    "@nestjs/core": "^8.2.0",
    "@nestjs/testing": "^8.2.0",
    "@types/deepmerge": "^2.2.0",
    "@types/jest": "^25.2.1",
    "jest": "^27.3.1",
    "prettier": "^1.19.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "7.1",
    "ts-jest": "^25.4.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "lib",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
